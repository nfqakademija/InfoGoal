{% extends "::base.html.twig" %}

{% block title %}InfoGoalKickerBundle:Table:index{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/infogoalkicker/css/general.css') }}" rel="stylesheet">
    <link href="{{ asset('/bundles/infogoalkicker/css/table-game.css') }}" rel="stylesheet">
    <link href="{{ asset('/bundles/infogoalkicker/css/player.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <main class="container"></main>
    <div id="table" class=" col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
        <img id="field-game" src="{{ asset('/bundles/infogoalkicker/assets/soccer-field.png') }}" alt="Soccer field" class="img-responsive">
        <div id="table-game">

            <div id="team-0" >
                <div class="player-0 row">
                  {% include '@InfoGoalKicker/Table/player.html.twig' %}
                </div><!--end player-0 -->

                <div class="player-1 row">
                    {% include '@InfoGoalKicker/Table/player.html.twig' %}
                </div><!--end player-1 -->
            </div><!--end team-0 -->

            <div id="team-1" >
                <div class="player-0 row">
                    {% include '@InfoGoalKicker/Table/player.html.twig' %}
                </div><!--end player-0 -->
                <div class="player-1 row">
                    {% include '@InfoGoalKicker/Table/player.html.twig' %}
                </div><!--end player-1 -->
            </div><!--end team-1 -->
            <div class="result col-lg-2 col-md-2">
                <div>
                    08 : 06
                </div>
            </div>
        </div><!-- end table-game -->

    </div><!-- end table -->
    </main><!-- end container -->

{% endblock %}