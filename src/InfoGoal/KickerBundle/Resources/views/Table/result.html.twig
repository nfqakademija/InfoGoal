            <div id="table-game" class="match-results">
                <h1>LaimÄ—tojai</h1>
                <div class="row">
                    <div class="col-sm-12 winners">
                        <div class="row">
                            <div class="col-sm-6">
                                {% if player1 is null %}
                                    {{ include('@InfoGoalKicker/Table/playerDefault.html.twig') }}
                                {% else %}
                                    {{ include('@InfoGoalKicker/Table/player.html.twig', { 'player': player1 }) }}
                                {% endif %}
                            </div>

                            <div class="col-sm-6">
                                {% if player1 is null %}
                                    {{ include('@InfoGoalKicker/Table/playerDefault.html.twig') }}
