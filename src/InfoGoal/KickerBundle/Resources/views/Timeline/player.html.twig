<div class="col-xs-12 col-sm-4 player-icon">
    <a href="{{ path('profile_page', {'id': player.id}) }}">
        {% if player.photo is not empty %}
            <img src="{{ asset('bundles/infogoalkicker/assets/uifaces/' ~ player.photo ~ '.jpg') }}" alt="player"
                 class="img-thumbnail">
        {% else %}
            <img src="{{ asset('bundles/infogoalkicker/assets/uifaces/default.png') }}" alt="player"
                 class="img-thumbnail">
        {% endif %}
    </a>
    <div class="level-icon">
        <div class="level-number">{{ player.level }}</div>
    </div>
</div>
<div class="hidden-xs col-sm-8 player-info">
    <p class="player-name">
        <a href="{{ path('profile_page', {'id': player.id}) }}">
            {% autoescape %}
            {{ player.name|replace({ (' '): '<br>' })|raw }}
            {% endautoescape %}
        </a>
    </p>
    <p class="player-game-info">Žaista: {{ player.played }}   Laimėta: {{ player.won }}</p>
</div>