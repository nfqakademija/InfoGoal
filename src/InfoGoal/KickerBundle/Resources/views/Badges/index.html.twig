{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='compass' output='bundles/infogoalkicker/css/*.css'
    '@InfoGoalKickerBundle/Resources/public/scss/Profile/badges.scss'
        '@InfoGoalKickerBundle/Resources/public/scss/Badges/badges.scss'
    %}
    <link href="{{ asset_url }}" rel="stylesheet"/>
    {% endstylesheets %}
{% endblock %}

{% block title %}Users{% endblock %}

{% block body %}
    <main class="container">

        {% for badge in badges %}
            <div class="col-xs-6 col-sm-6 col-md-4">
                <div class="row my-badge">
                    <div class="col-sm-4 badge-img">
                        <img src="{{ asset('bundles/infogoalkicker/assets/badges/' ~ badge.imageUrl ~ '.png') }}">
                    </div>
                    <div class="col-sm-8 badge-info">
                        <p class="badge-name">{{ badge.name }}</p>
                        <p class="badge-howto">{{ badge.howToGetBadge }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}

    </main><!-- end container -->
{% endblock %}